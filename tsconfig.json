{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["DOM", "ES2020"],
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react",
    "declaration": true,
    "outDir": "./lib",
    "strict": true
  },
  "include": ["src"],
  "exclude": [
    "lib",
    "node_modules",
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx"
  ]
}
